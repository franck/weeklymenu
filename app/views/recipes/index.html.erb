<h1>Recettes</h1>

<p><%= link_to "Ajouter une recette", new_recipe_path %></p>

<%= render "/tags/tags", tags: @tags %>

<table>
  <% for recipe in @recipes %>
    <tr id="recipe-<%= recipe.id %>" class="recipe">
      <td class='recipe-name'>
        <%= recipe.name %> <%= display_tags(recipe.tags) %>
      </td>
      <td>
        <%= link_to 'modifier', edit_recipe_path(recipe) %>
        <%= link_to 'supprimer', recipe_path(recipe), method: 'delete' %>
      </td>
    </tr>
  <% end %>
</table>
