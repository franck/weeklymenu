    success: => 
      displayTagInMeal($tag, $meal)

displayTagInMeal = ($tag, $meal) ->
  tag_id = tagId($tag)
  tag_text = $tag.text()
  $meal.append(tagCapsule(tag_id, tag_text))

removeTagFromMeal = (event) ->
  $object = $(event.target)
  tag_id = tagId($object)
