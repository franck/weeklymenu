jQuery ->
  $('.tag').draggable
    revert: true,
    revertDuration: 100

  $('.recipe').droppable
    hoverClass: 'ui-droppable-hover'
    drop: (event, ui) ->
      addTagToRecipe(ui.draggable, $(this))
      
  $(document).on 'click', '.recipe .tag-remove', removeTagFromRecipe

  $('.meal').droppable
    hoverClass: 'ui-droppable-hover'
    drop: (event, ui) ->
      addTagToMeal(ui.draggable, $(this))
      
  $(document).on 'click', '.meal .tag-remove', removeTagFromMeal



